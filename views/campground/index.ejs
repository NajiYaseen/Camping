<% layout('layout/boilerplate') %>

    <h1> campgrounds</h1>
    <ul>
        <% for(let campground of campgrounds){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=campground.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.discription %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %> </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"> starting of <%= campground.price %>$ </small>
                            </p>
                            <a href="/campgrounds/<%= campground.id %> " class="btn btn-primary">view <%= campground.title %>  </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </ul>

    <footer>
        <a href="/campgrounds/new">ADD</a>
    </footer>